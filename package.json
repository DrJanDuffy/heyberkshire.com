{
  "name": "faq-gen",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "flask-dev": "FLASK_DEBUG=1 pip3 install -r requirements.txt && python3 -m flask --app api/index run -p 5328",
    "next-dev": "next dev",
    "dev": "concurrently \"pnpm run next-dev\" \"pnpm run flask-dev\"",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,css}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,css}\"",
    "validate": "npm run type-check && npm run lint && npm run format:check",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run --reporter=verbose",
    "test:watch": "vitest watch",
    "analyze": "ANALYZE=true npm run build",
    "lighthouse": "lhci autorun",
    "lighthouse:manual": "lighthouse https://heyberkshire.com --view --preset=desktop",
    "perf": "npm run analyze && npm run lighthouse",
    "vercel:build": "vercel build",
    "vercel:deploy": "vercel deploy --prebuilt",
    "vercel:prod": "vercel deploy --prod --prebuilt",
    "cloudflare:dev": "wrangler dev",
    "cloudflare:deploy": "wrangler deploy",
    "cloudflare:pages": "npx @cloudflare/next-on-pages",
    "cloudflare:build": "npm run cloudflare:pages",
    "build:cloudflare": "npx @cloudflare/next-on-pages"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.0",
    "@hookform/resolvers": "^3.3.4",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-toast": "^1.1.5",
    "@sentry/nextjs": "^10.38.0",
    "@vercel/analytics": "^1.6.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "copy-to-clipboard": "^3.3.3",
    "geist": "^1.2.2",
    "lucide-react": "^0.344.0",
    "next": "^14.1.2",
    "openai": "^4.28.0",
    "react": "^18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "^7.51.0",
    "react-markdown": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1.13.2",
    "@cloudflare/workers-types": "^4.20240806.0",
    "@lhci/cli": "^0.13.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "20.11.24",
    "@types/react": "18.2.63",
    "@types/react-dom": "18.2.20",
    "@vitejs/plugin-react": "^5.1.4",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.1.2",
    "happy-dom": "^20.6.1",
    "jsdom": "^28.0.0",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.12",
    "tailwind-merge": "^2.2.1",
    "tailwindcss": "3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "5.4.2",
    "vitest": "^4.0.18",
    "webpack-bundle-analyzer": "^4.10.2",
    "wrangler": "^3.78.12"
  }
}
