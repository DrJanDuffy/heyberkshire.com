# Follow Up Boss API Configuration
# Copy to .env.local and fill in your values

# Required - Get from Follow Up Boss Admin â†’ API settings
# https://app.followupboss.com/2/admin/api
FUB_API_KEY=your_api_key_here

# Optional - System Key for higher rate limits
# Increases global limit from 125 to 250 requests per 10 seconds
FUB_SYSTEM_KEY=your_system_key_here

# Webhook Configuration (optional)
# Set this URL in Follow Up Boss webhook settings
# Example: https://yourdomain.com/api/webhooks/fub
FUB_WEBHOOK_URL=https://heyberkshire.com/api/webhooks/fub

# Webhook Secret (optional, for signature verification)
FUB_WEBHOOK_SECRET=your_webhook_secret_here

# Integration Settings (optional)
FUB_AUTO_TAG_ENABLED=true
FUB_AI_QUALIFICATION_ENABLED=true
FUB_DUPLICATE_CHECK_ENABLED=true

# Default Settings (optional)
FUB_DEFAULT_STAGE=New Lead
FUB_DEFAULT_SOURCE=website

# Rate Limiting (optional)
FUB_RATE_LIMIT_ENABLED=true
FUB_CACHE_ENABLED=true
FUB_CACHE_TTL=60  # seconds

# Automation Settings (optional)
FUB_AUTO_PROGRESS_ENABLED=false
FUB_STALE_LEAD_DAYS=30
