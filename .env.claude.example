# Anthropic Claude API Configuration
# Copy to .env.local and fill in your values

# Required - Get from https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=your_api_key_here

# Model Selection (optional)
# Options: claude-3-5-sonnet-20241022 (default), claude-3-5-haiku-20241022, claude-3-opus-20240229
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# Token Configuration (optional)
CLAUDE_MAX_TOKENS=4096
CLAUDE_TEMPERATURE=1.0

# Prompt Caching (optional, default: enabled)
# Set to 'false' to disable
CLAUDE_PROMPT_CACHING=true

# Response Caching (optional, default: enabled)
# Set to 'false' to disable
CLAUDE_RESPONSE_CACHING=true

# Rate Limiting (optional)
CLAUDE_RATE_LIMIT=true
CLAUDE_RPM=50              # Requests per minute per client
CLAUDE_TPM=100000          # Tokens per minute

# Cost Management (optional)
CLAUDE_COST_TRACKING=true
CLAUDE_COST_ALERT_THRESHOLD=10.00    # Alert when daily cost exceeds this
CLAUDE_DAILY_LIMIT=50.00             # Stop requests when daily cost exceeds this

# Retry Configuration (optional)
CLAUDE_MAX_RETRIES=3

# Streaming (optional)
CLAUDE_STREAMING=true

# Cache Backend (optional)
# Options: memory (default), redis, cloudflare-kv
CLAUDE_CACHE_BACKEND=memory
REDIS_URL=redis://localhost:6379
CLOUDFLARE_KV_NAMESPACE=CLAUDE_CACHE

# Debug Mode (optional)
CLAUDE_DEBUG=false
