# Auto detect text files and perform LF normalization
* text=auto

# Force LF line endings for all text files
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.html text eol=lf
*.md text eol=lf
*.mdc text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.xml text eol=lf

# Denote binary files that should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.webp binary
*.avif binary
*.mp4 binary
*.webm binary
*.mov binary
*.pdf binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary

# Git LFS tracking for large media files (optional - enable if needed)
# *.mp4 filter=lfs diff=lfs merge=lfs -text
# *.mov filter=lfs diff=lfs merge=lfs -text
# *.webm filter=lfs diff=lfs merge=lfs -text

# Exclude from language stats
*.json linguist-detectable=false
*.lock linguist-generated=true
pnpm-lock.yaml linguist-generated=true
package-lock.json linguist-generated=true
